{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "CNCTC Model Card",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "model_type",
    "features",
    "training",
    "dataset",
    "created_at"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "minLength": 1
    },
    "model_type": {
      "type": "string",
      "enum": ["torchscript", "onnx"]
    },
    "features": {
      "type": "object",
      "additionalProperties": false,
      "required": ["count", "names", "normalize"],
      "properties": {
        "count": {
          "type": "integer",
          "minimum": 1
        },
        "names": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "normalize": {
          "type": "object",
          "additionalProperties": false,
          "required": ["mean", "std"],
          "properties": {
            "mean": {
              "type": "array",
              "items": {
                "type": "number"
              }
            },
            "std": {
              "type": "array",
              "items": {
                "type": "number"
              }
            }
          }
        }
      }
    },
    "training": {
      "type": "object",
      "additionalProperties": false,
      "required": ["framework", "versions"],
      "properties": {
        "framework": {
          "type": "string",
          "minLength": 1
        },
        "versions": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "minLength": 1
          }
        }
      }
    },
    "dataset": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "sha256"],
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1
        },
        "sha256": {
          "type": "string",
          "pattern": "^[0-9a-fA-F]{64}$"
        }
      }
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "validation": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "loss": {
          "type": "number"
        },
        "accuracy": {
          "type": "number"
        }
      }
    }
  }
}
